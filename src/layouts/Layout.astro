---
import "../../src/styles/Fonts/DM_Serif_Display.css";
import "../../src/styles/Fonts/Poppins.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
const description = "Zarcka's corner of the internet where you can learn a thing or two about me.";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8"/>

		<meta name="viewport" content="width=device-width"/>
		<meta name="generator" content={Astro.generator}/>
		<meta name="author" content="Zarcka"/>
		<meta name="description" content={description}/>

		<meta property="og:title" content={title}/>
		<meta property="og:site_name" content="Zarcka's Portfolio"/>
		<meta property="og:description" content={description}/>
		<meta property="og:image" content="/Images/Banner.png"/>
		<meta property="og:image:width" content="1200"/>
		<meta property="og:image:height" content="627"/>
		<meta property="og:image:alt" content="Banner of the website"/>
		<meta property="og:url" content="https://zarcka.github.io"/>
		<meta property="og:type" content="website"/>

		<meta name="twitter:card" content="summary_large_image"/>
		<meta name="twitter:title" content={title}/>
		<meta name="twitter:description" content={description}/>
		<meta name="twitter:image" content="/Banner.png"/>

		<link rel="canonical" href="https://zarcka.github.io"/>
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png"/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png"/>
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png"/>
		<link rel="manifest" href="/site.webmanifest"/>
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5"/>
		<meta name="msapplication-TileColor" content="#2b5797"/>
		<meta name="theme-color" content="#f4b8a9"/>

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		scroll-behavior: smooth;
	}
	html::-webkit-scrollbar {
		background-color: var(--secondary-light-clr);
	}
	html::-webkit-scrollbar-thumb {
		scrollbar-color: var(--accent-lighter-clr);
	}
	@supports (scrollbar-color: var(--bg-dark-clr) var(--bg-light-clr)) {
		html {
			scrollbar-color: var(--accent-lighter-clr) var(--secondary-light-clr);
		}
	}
	body {
		--expanded-navbar-width: 12rem;
		--contracted-navbar-width: 3rem;
		--navbar-width: var(--contracted-navbar-width);
		margin: 0;
		padding: 0;
		display: grid;
		grid-template-areas: 
			"content navbar" 
			"content navbar";
		grid-template-columns: 1fr var(--navbar-width);
		grid-template-rows: 3rem 1fr;
		background: var(--bg-clr);
		color: var(--text-light-clr);
		font-size: calc(1.1rem + 0.075vw + 0.075vh);
		font-family: "Poppins";
		letter-spacing: 0.025rem;
		line-height: 1.75;
		transition: 400ms all cubic-bezier(1,0,0,1);
	}
	body:has(dialog[open]) {
		overflow-y: hidden;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	@media (max-width: 67em) or (max-height: 38.125em) {
		body {
			grid-template-areas: 
				"navbar  navbar " 
				"content content";
		}
	}
</style>
