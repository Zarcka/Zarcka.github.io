<script>
	const navMenuButton: Element = document.querySelector("#nav-menu-button");
	const navbarButton: Element = document.querySelector("#navbar-button");
	const galleryImages: NodeListOf<HTMLImageElement> = document.querySelectorAll(".image-gallery .gallery-item");
	const expandButtons: NodeListOf<HTMLElement> = document.querySelectorAll(".image-gallery .gallery-item ~ .expand-button");
	const lightboxElem: HTMLDialogElement = document.querySelector("#image-gallery-lightbox");
	const lightboxImage: HTMLImageElement = document.querySelector("#lightbox-image");
	const lightboxCloseButton: Element = document.querySelector("#image-gallery-lightbox .close-button");
	const lightboxPreviousButton: Element = document.querySelector("#image-gallery-lightbox .previous-button");
	const lightboxNextButton: Element = document.querySelector("#image-gallery-lightbox .next-button");
	const bonusImage: HTMLImageElement = document.querySelector("#bonus-image");
	const bonusText: HTMLImageElement = document.querySelector("#bonus-text");
	const fileNameExtractRegex: RegExp = /(?!.*\/)(?<=\/).+?(?=\..+)/g;
	const imageArray: Array<{ default: ImageMetadata }> = JSON.parse(bonusImage.dataset.imageArray);
	const randomImage = imageArray[Math.floor(Math.random() * imageArray.length)];
	let currentImageIndex: number = 0;

	function toggleAriaExpandedElem (elem: Element) {
		let ariaExpanded = elem.getAttribute("aria-expanded");
		let controlledElem = document.getElementById(elem.getAttribute("aria-controls"));

		if (ariaExpanded == "false") {
			elem.setAttribute("aria-expanded", "true");
			controlledElem.classList.add("expanded");
		}
		else {
			elem.setAttribute("aria-expanded", "false");
			controlledElem.classList.remove("expanded");
		}
	}

	function lightboxImageSelector (index: string | number) {
		if (!(typeof index == "string")) {
			currentImageIndex = index
		}
		else if (index.toLowerCase() == "previous") {
			currentImageIndex = (currentImageIndex - 1 < 0) ? (galleryImages.length - 1) : (currentImageIndex - 1);
		}
		else if (index.toLowerCase() == "next") {
			currentImageIndex = (currentImageIndex + 1 >= galleryImages.length) ? 0 : (currentImageIndex + 1);
		}
		else {
			return;
		}
		lightboxImage.width = Number(galleryImages[currentImageIndex].getAttribute("width"));
		lightboxImage.height = Number(galleryImages[currentImageIndex].getAttribute("height"));
		lightboxImage.alt = galleryImages[currentImageIndex].alt;
		lightboxImage.src = galleryImages[currentImageIndex].src;
	}

	for (let i = 0; i < galleryImages.length; i++) {
		expandButtons[i].dataset.index = String(i);
		expandButtons[i].addEventListener("click", () => {
			lightboxImageSelector(Number(expandButtons[i].dataset.index));
			lightboxElem.showModal();
		}, false);
	}

	navMenuButton.addEventListener("click", () => { 
		toggleAriaExpandedElem(navMenuButton);
		
		let ariaExpanded = navMenuButton.getAttribute("aria-expanded");
		// SRText stands for Screen Reader Text
		const SRText = document.querySelector("#nav-menu-button > .visually-hidden");

		if (ariaExpanded == "false") {
			SRText.textContent = SRText.getAttribute("data-minimised-text");
		}
		else {
			SRText.textContent = SRText.getAttribute("data-maximised-text");
		}
	}, false);

	navbarButton.addEventListener("click", () => {
		toggleAriaExpandedElem(navbarButton);

		let ariaExpanded = navbarButton.getAttribute("aria-expanded");
		// SRText stands for Screen Reader Text
		const SRText = document.querySelector("#navbar-button > .visually-hidden");

		if (ariaExpanded == "false") {
			document.body.style.setProperty("--navbar-width", "var(--contracted-navbar-width)");
			SRText.textContent = SRText.getAttribute("data-minimised-text");
		}
		else {
			document.body.style.setProperty("--navbar-width", "var(--expanded-navbar-width)");
			SRText.textContent = SRText.getAttribute("data-maximised-text");
		}
	}, false);

	lightboxCloseButton.addEventListener("click", () => { lightboxElem.close() }, false);
	lightboxPreviousButton.addEventListener("click", () => { lightboxImageSelector("previous") }, false);
	lightboxNextButton.addEventListener("click", () => { lightboxImageSelector("next") }, false);

	bonusImage.width = randomImage.default.width;
	bonusImage.height = randomImage.default.height;
	bonusImage.src = randomImage.default.src;
	bonusImage.style.setProperty("--image-width", `${String(randomImage.default.width)}px`);
	bonusImage.style.setProperty("--image-height", `${String(randomImage.default.height)}px`);
	/** 
	* Returns the new text if the variable is empty
	*/
	let updateIfEmpty: (text: string, field: string) => string = (text, field) => {return !(field) ? text : field};
	let quote = "";
	let animeInfo = "";
	switch (fileNameExtractRegex.exec(randomImage.default.src)[0]) {
		case "Faputa-excited":
			bonusImage.alt = updateIfEmpty("Faputa running around on her arms and legs, and jumping", bonusImage.alt);
			quote = updateIfEmpty("Faputa is adorable :3", quote);
			animeInfo = updateIfEmpty("Faputa from Made In Abyss", animeInfo);

		case "Faputa-nom-reg":
			bonusImage.alt = updateIfEmpty("Faputa biting Reg's cheek", bonusImage.alt);
			quote = updateIfEmpty("Cute Faputa cutely biting Reg's cheek :3, I love Made In Abyss", quote);
			animeInfo = updateIfEmpty("Faputa (the one biting) and Reg (the one being bitten) from Made In Abyss", animeInfo);

		case "Feel The Burn":
			bonusImage.alt = updateIfEmpty("Shizumo, standing and being on fire at a table, while Atarashi and Matsumi look at her", bonusImage.alt);
			quote = updateIfEmpty("Representation of me motivating myself to finish the website (I know nothing about the anime)", quote);
			animeInfo = updateIfEmpty("Shizumo (the one on fire), Atarashi (on the right), Matsumi (on the left) from Saki Achiga-hen: Episode of Side-A", animeInfo);

		case "Nanachi-celebrating":
			bonusImage.alt = updateIfEmpty("Nanachi smiling while raising their arm as the camera zooms in with Belaf in the background", bonusImage.alt);
			quote = updateIfEmpty("Representation of me celebrating having survived long hours of working on this website", quote);
			animeInfo = updateIfEmpty("Nanachi (the one in the front) and Belaf from Made In Abyss", animeInfo);

		case "Nanachi-grinding":
			bonusImage.alt = updateIfEmpty("Nanachi talking while turning the handle of a grinder", bonusImage.alt);
			quote = updateIfEmpty("Nanachi grinding something as they are preparing food, I included this gif because I love Nanachi (a little too much)", quote);
			animeInfo = updateIfEmpty("Nanachi from Made In Abyss", animeInfo);

		case "Nanachi-sad":
			bonusImage.alt = updateIfEmpty("Nanachi being sad in a sarcastic manner to tease Reg while holding a stone tablet and pencil", bonusImage.alt);
			quote = updateIfEmpty("Rikooo, Oitekinaideee", quote);
			animeInfo = updateIfEmpty("Nanachi from Made In Abyss", animeInfo);

		case "aoi-inuyama-yuru-camp":
			bonusImage.alt = updateIfEmpty("Aoi Inuyama opening her eyes then waving her hand", bonusImage.alt);
			quote = updateIfEmpty("Hiii, I hope you enjoyed your time on my website! See you another time!", quote);
			animeInfo = updateIfEmpty("Aoi Inuyama from Yuru Camp", animeInfo);

		case "little dance":
			bonusImage.alt = updateIfEmpty("Chika Fujiwara doing a little dance", bonusImage.alt);
			quote = updateIfEmpty("A fun little dance to distract oneself from responsibilities and other things", quote);
			animeInfo = updateIfEmpty("Chika Fujiwara from Kaguya-sama: Love Is War", animeInfo);

		case "nekopara-anime-lay-down-exhausted-tired":
			bonusImage.alt = updateIfEmpty("Chocola and Vanilla both exhausted while Vanilla lay her head down on the table and Chocola lay down on the couch", bonusImage.alt);
			quote = updateIfEmpty("This is how I am after spending hours working on this website, making sure that everything works as intended, and that there is no mistakes. They are so adorable >w<", quote);
			animeInfo = updateIfEmpty("Chocola and Vanilla from Nekopara", animeInfo);

		default:
			bonusText.innerHTML = `<i>"${ quote }"<br><br>- ${ animeInfo } -</i>`;
			bonusImage.title = bonusImage.alt;
			console.log(`bonusImage.alt = ${ updateIfEmpty("No alternative text is available for the chosen image", bonusImage.alt) }`);
			console.log(`quote = ${ updateIfEmpty("No quote is available for the chosen image", quote) }`);
			console.log(`animeInfo = ${ updateIfEmpty("No information about the anime is available for the chosen image", animeInfo) }`);
	}
</script>

