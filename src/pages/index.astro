	}

	#navbar-button:active {
		background-color: var(--accent-darker-clr);
		border-left-width: 8px;
	}

	#navbar-button[aria-expanded="false"] {
		rotate: 180deg;
	}

	#nav-menu {
		display: flex;
		align-items: center;
		width: 100%;
		min-height: 60%;
		background-color: var(--primary-clr);
	}

	#nav-menu-button {
		display: none;
		padding: 0;
		margin: 0 0 0 1rem;
		height: 100%;
		border: none;
		background-color: transparent;
		color: var(--bg-clr);
		font-family: "poppins";
		font-size: inherit;
		cursor: pointer;
	}

	#nav-list {
		visibility: hidden;
		overflow-x: hidden;
		list-style: none;
		width: 0;
		margin: 0;
		padding: 0;
		transition: 
			500ms all cubic-bezier(0.18,0.89,0.32,1.28), 
			200ms background-color cubic-bezier(0.22,0.61,0.36,1), 
			400ms 100ms width cubic-bezier(1,0,0,1);
	}

	#navbar.expanded #nav-list {
		visibility: visible;
		width: 100%;
	}

	.nav-link {
		--bg-bar-clr: var(--primary-lighter-clr);
		display: block;
		width: 100%;
		padding: 1.2rem 1.2em;
		color: var(--bg-clr);
		text-decoration: none;
		border-top: 2px var(--primary-light-clr) solid;
		border-bottom: 2px var(--primary-light-clr) solid;
		transition:
			200ms all cubic-bezier(0.18, 0.89, 0.32, 1.28),
			200ms background-color cubic-bezier(0.22, 0.61, 0.36, 1);
		background: linear-gradient(
			180deg,
			var(--primary-lighter-clr) 33%,
			var(--secondary-lighter-clr) 33%,
			var(--secondary-lighter-clr) 66%,
			var(--accent-lighter-clr) 66%
		);
		background-position: 0 100%;
		background-repeat: no-repeat;
		background-size: 0 100%;
	}

	.nav-link:hover,
	.nav-link:focus-visible {
		padding-left: 2em;
		background-color: var(--primary-dark-clr);
		background-position: 0 100%;
		background-size: 1rem 100%;
	}

	.nav-link:active {
		padding-left: 2rem;
		background-color: var(--primary-darker-clr);
		background-position: 0 0;
	}

	.nav-item ~ .nav-item > .nav-link {
		border-top: none;
	}

	@media (max-width: 62.5em) or (max-height: 38.125em) {
		#navbar {
			width: 100%;
			height: initial;
			flex-direction: row;
		}

		#navbar > .secondary {
			width: 30%;
			height: 100%;
		}

		#navbar > .accent {
			width: 10%;
			height: 100%;
		}

		#navbar-button {
			display: none;
		}

		#nav-menu {
			width: 60%;
			min-height: 100%;
			display: initial;
			background-color: var(--primary-clr);
		}

		#nav-menu-button {
			display: initial;
		}

		#nav-list {
			visibility: hidden;
			overflow: hidden;
			max-width: 0;
			width: 100%;
			max-height: calc(100vh - 100%);
			background-color: inherit;
			border-top: 2px var(--accent-light-clr) solid;
			transition: 400ms all cubic-bezier(1,0,0,1);
		}

		#nav-list.expanded {
			visibility: visible;
			overflow: auto;
			max-width: 100%;
		}

		.nav-link {
